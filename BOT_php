$res= mysqli_query($conn,$query);
$result = mysqli_query($conn, $query) or die("Error" . mysqli_error($conn));
if($result)
{
    $rows=mysqli_num_rows($result);
    echo"<table><tr><th> genre_id </th><th> genre_name </th></tr>";
    while($row=mysqli_fetch_row($result))
    {
        echo "<tr>";
        for($i=0;$i<2;$i++)
